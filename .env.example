# HCD Interview Coach — Environment Configuration
# Copy this file to .env and fill in your values
# Note: For production, API keys should be stored in macOS Keychain, not here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# OpenAI API Key (for local development/testing only)
# In production, users enter this in Settings → API (stored in Keychain)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API Base URL (optional, for proxies or enterprise endpoints)
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Log level: debug, info, warning, error
HCD_LOG_LEVEL=debug

# Skip audio setup wizard (for testing without BlackHole)
HCD_SKIP_AUDIO_SETUP=false

# Enable mock API responses (no real API calls)
HCD_USE_MOCK_API=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# API key specifically for integration tests
HCD_TEST_API_KEY=sk-test-key-here

# Test timeout in seconds
HCD_TEST_TIMEOUT=30

# Enable verbose test output
HCD_TEST_VERBOSE=false

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# Code signing identity (for CI builds)
# CODE_SIGN_IDENTITY=Developer ID Application: Your Name (XXXXXXXXXX)

# Notarization credentials (stored as GitHub secrets in CI)
# NOTARIZE_APPLE_ID=your@email.com
# NOTARIZE_PASSWORD=@keychain:AC_PASSWORD
# NOTARIZE_TEAM_ID=XXXXXXXXXX

# Sparkle EdDSA private key for signing updates (base64 encoded)
# SPARKLE_PRIVATE_KEY=base64-encoded-private-key

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================

# Enable experimental features
HCD_FEATURE_EXPERIMENTAL=false

# Enable detailed coaching analytics logging
HCD_COACHING_ANALYTICS=false

# Maximum coaching prompts per session (default: 3)
# HCD_MAX_COACHING_PROMPTS=3

# Coaching confidence threshold (default: 0.85)
# HCD_COACHING_THRESHOLD=0.85

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Opt-in telemetry (anonymized usage data)
HCD_TELEMETRY_ENABLED=false

# Telemetry endpoint (if self-hosting)
# HCD_TELEMETRY_ENDPOINT=https://your-analytics.com/collect
